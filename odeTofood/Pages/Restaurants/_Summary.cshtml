@{
}
@using odeTofood.Core
@model Restaurant

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>@Model.Name</h3>
        </div><div class="panel-body">
        <span>Location: @Model.Location</span>
        <span>Cusine: @Model.Cuisine</span>
        </div>
              <div class="panel-footer">
                  <a class="btn btn-lg"
                     asp-page="./detail"
                     asp-route-restaurantId="@Model.Id">
                      <i class="fa-solid fa-magnifying-glass-plus btn-outline-primary"></i>
                  </a>
                  <a class="btn btn-lg"
                     asp-page="./edit"
                     asp-route-restaurantId="@Model.Id">
                      <i class="fa-solid fa-edit btn-outline-warning"></i>
                  </a>
                  <a class="btn btn-lg"
                     asp-page="./delete"
                     asp-route-restaurantId="@Model.Id">
                      <i class="fa-solid fa-trash-alt btn-outline-danger"></i>
                  </a>
              </div>
    </div> 